<% if @event.errors.any? %>
  <% @event.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>

<%= form_for @event do |f| %>
  <%= f.label :name %><br>
  <%= f.text_field :name %><br><br><br>
  <%= f.label :description %><br>
  <%= f.text_area :description %><br><br><br>
  <%= f.label :date %><br>
  <%= f.date_field :date %><br><br><br>
  <%= f.submit "Create Event" %>
<% end %>
