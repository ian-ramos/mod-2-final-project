      <% if @event.errors.any? %>
        <% @event.errors.full_messages.each do |message| %>
          <%= message %>
        <% end %>
      <% end %>

      <%= form_for @event do |f| %>

        <div class="input-group">
          <%= f.text_field :name, class: 'form-control' %></div><br>
        <div class="input-group">
          <%= f.text_area :description, class: 'form-control' %></div><br>
        <div class="input-group">
          <%= f.date_field :date, class: 'form-control' %></div><br>
        <input id="hidden" type="hidden" name="event[host_id]" value="<%= session[:host_id] %>">
        <p><%= f.submit "Create Event", class: 'btn btn-primary' %></p>

      <% end %>
