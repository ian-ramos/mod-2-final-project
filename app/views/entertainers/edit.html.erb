<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <img src= "<%= @entertainer.image %>" alt="<%= @entertainer.username %>'s profile image" class="rounded-circle" width=400px>
      <h1><%= @entertainer.username %></h1>
      <h2>Type: <%= @entertainer.job_type %></h2>
      <div class="form-group">
        <%= form_for(@entertainer) do |f| %>
          <div class="form-group col-3">
          <%= f.label 'Edit your hourly rate: ' %>
          <%= f.text_field :rate, class: 'form-control' %></div>
          <div class="form-group col-6">
          <%= f.label 'Edit your description of services: ' %>
          <%= f.text_area :description, class: 'form-control' %></div>
          <%= f.submit class: 'btn btn-primary'%>
        <% end %>
      </div>
    </div>
  </div>
</div>
