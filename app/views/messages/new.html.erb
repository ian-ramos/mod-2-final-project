<% if @host %>
  <%= form_for @message do |f| %>
    <%= f.label 'Title: ' %>
    <%= f.text_field :title %><br>
    <%= f.label 'To: ' %>
    <%= f.text_field :entertainer_username %><br>
    <%= f.label 'Message: ' %><br>
    <%= f.text_area :content %><br>
    <%= f.hidden_field :host_username, value: @host.username%>
    <%= f.submit 'Send Message' %>
  <% end %>
<% else %>
  <%= form_for @message do |f| %>
    <%= f.label 'Title: ' %>
    <%= f.text_field :title %><br>
    <%= f.label 'To: ' %>
    <%= f.text_field :host_username %><br>
    <%= f.label 'Message: ' %><br>
    <%= f.text_area :content %><br>
    <%= f.hidden_field :entertainer_username, value: @entertainer.username%>
    <%= f.submit 'Send Message' %>
  <% end %>
<% end %>
