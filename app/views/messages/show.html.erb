<div class="container">
  <div class="row justify-content-center">
    <h1><%= @message.title %></h1>
  </div>
  <div class="row justify-content-center">
    <h5>To: <%= @message.receiver %> | From: <%= @message.sender %></h5>
  </div>
  <div class="row justify-content-center">
    <h5>Message: <%= @message.content %></h5>
  </div>
  <div class="row justify-content-center">
    <%= form_for @message, method: :delete do |f| %>
      <%= f.submit 'Delete'%>
    <% end %>
  </div>
</div>
